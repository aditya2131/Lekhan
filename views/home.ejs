<%- include("partials/header"); -%>

<div class="container text-center">
  <h1>Bring Your Ideas to Life</h1>
  <p>"Design a stunning blog that showcases your thoughts, passions, and expertise"</p>
  <a href="/compose" class="btn btn-primary btn-lg" style="font-family: 'Times New Roman', Times, serif;">Compose</a>
</div>

<div class="container">
  <% posts.forEach(function(post) { %>
    <div class="post">
      <h2 style="font-weight: bold; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size:large; color: #F4CE14;"><%= post.title %></h2>
      <p style="font-size: 15px; font-weight: 300; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ; color: aliceblue;"><%= post.content.substring(0, 100) %>...</p>
      <a href="/posts/<%= post._id %>">Read More</a>
    </div>
  <% }); %>
</div>

<%- include("partials/footer"); -%>
